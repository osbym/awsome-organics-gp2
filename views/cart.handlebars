{{> nav }}
{{> boilerplate }}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Shopping Cart</h2>
    </div>
  </div>

  {{#if cartItems}}
   
  {{#grouped_each 4 cartItems}}
  <div class="row cart-row">  
    {{#each this}}
    <div class="col-md-3 col-sm-6 product">
      <div class="thumbnail">
        <img src="{{Product.img}}" alt="{{Product.name}}">
        </a>
        <div class="caption">
          <h3>{{Product.name}}</h3>
          <p class="price">${{Product.price}}</p>
          <form method="POST" action="/cart/{{Product.id}}/?_method=PUT">
            <input type="hidden" value={{Product.id}} name="itemId"> 
            <div class="form-group">
              <label for="quantity">Qty</label>
              <select class="form-control product-dropdown" id="quantity" name="quantity">
                <option selected>{{quantity}}</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
              <button class="btn btn-default noPad" type="submit" value="Submit">Update Quantity</button>
            </div>
          </form>
          <form method="POST" action="/cart/{{id}}?_method=DELETE">
            <div class="form-group">
              <div class="btn-group">
                <a href="/products/{{Product.id}}" class="btn btn-primary" role="button">View</a> 
                <button class="btn btn-danger" type="submit" value="Submit">Remove</button>
              </div>
              <input type="hidden" value={{quantity}} name="quantity">
            </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/grouped_each}}

  {{else}}
  <p>There are no items in your cart.</p>
  {{/if }}
   
  <div class="row">
    <div class="col-md-12">
    {{#if cartItems}}
      <a href="/order" class="btn btn-primary">Checkout</a>
    {{else}}
      <a href="/products" class="btn btn-primary">Shop</a>
    {{/if}}
    </div>
  </div>
</div>


{{> footer }}

