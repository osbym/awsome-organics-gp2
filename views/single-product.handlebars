<!-- make a card with an image that displays a short paragraph of the product and pricing styled with tailwind -->
<div class="flex flex-col items-center justify-center w-full">
    <div class="text-center w-2/3">
        <div class="bg-white rounded-lg shadow-lg p-4">
            <div class="flex flex-col items-center justify-center w-full">
                <div class="flex flex-col items-center justify-center w-full">
                    <img class="rounded-full h-64 w-64" src="./assets/img/random1.jpg" alt="">
                </div>
                <div class="flex flex-col items-center justify-center w-full">
                    <h1 class="font-bold text-xl text-center"{{product.name}}</h1>
                    <h2 class="font-bold text-xl text-center">{{product.price}}</h2>
                    <p class=" font-light text-md text-center w">
                        {{product.description}}
                    </p>
                    <!-- make a back shorcut for product page -->
                    <div class="flex flex-col items-center justify-center w-full">
                        <a href="/products"
                            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                            Back
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>

