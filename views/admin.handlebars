
{{#if isAdmin}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Admin</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Users</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{role}}</td>
                        <td>
                            <a href="/admin/users/{{id}}/edit" class="btn btn-primary">Edit</a>
                            <a href="/admin/users/{{id}}/delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Products</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{price}}</td>
                        <td>
                            <a href="/admin/products/{{id}}/edit" class="btn btn-primary">Edit</a>
                            <a href="/admin/products/{{id}}/delete" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{else}}

{{/if}}
    
